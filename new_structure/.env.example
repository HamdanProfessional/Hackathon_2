# ⚠️ SECURITY NOTE: Copy this file to .env and NEVER commit .env to version control

# =============================================================================
# Todo Evolution Project Environment Configuration
# =============================================================================

# -------------------------------------------------------------------------
# AI & Gemini Configuration (PHASE III+ REQUIRED)
# -------------------------------------------------------------------------
# ⚠️ MANDATORY: Google Gemini 2.5 Flash API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# -------------------------------------------------------------------------
# Database Configuration (PHASE II+ REQUIRED)
# -------------------------------------------------------------------------
# ⚠️ MANDATORY: Neon PostgreSQL Database URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require
# Get from: https://console.neon.tech/
DATABASE_URL=postgresql://username:password@host-name.neon.tech/dbname?sslmode=require

# -------------------------------------------------------------------------
# Authentication Configuration (PHASE II+ REQUIRED)
# -------------------------------------------------------------------------
# ⚠️ MANDATORY: Secret key for Better Auth (JWT tokens)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_super_secret_random_string_here_min_32_chars

# -------------------------------------------------------------------------
# OpenAI Configuration (OPTIONAL)
# -------------------------------------------------------------------------
# Optional: OpenAI API Key for additional tools or fallbacks
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# -------------------------------------------------------------------------
# Frontend Configuration (PHASE II+ REQUIRED)
# -------------------------------------------------------------------------
# Public OpenAI API key for client-side usage (ChatKit)
# ⚠️ WARNING: This key should be limited to specific domains in OpenAI console
NEXT_PUBLIC_OPENAI_API_KEY=your_restricted_openai_api_key_here

# -------------------------------------------------------------------------
# Application Configuration
# -------------------------------------------------------------------------
# Environment (development, staging, production)
NODE_ENV=development

# Server configuration
HOST=localhost
PORT=8000

# Frontend server port
NEXT_PUBLIC_PORT=3000

# -------------------------------------------------------------------------
# Development Tools Configuration
# -------------------------------------------------------------------------
# Enable debug mode
DEBUG=true

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# -------------------------------------------------------------------------
# Testing Configuration
# -------------------------------------------------------------------------
# Test database URL (overrides DATABASE_URL in tests)
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_todo_db?sslmode=disable

# -------------------------------------------------------------------------
# Phase-Specific Settings
# -------------------------------------------------------------------------
# Current phase (1, 2, or 3)
CURRENT_PHASE=1

# Phase I: In-memory only (overrides database settings)
PHASE_1_IN_MEMORY_ONLY=true

# Phase II: Database enabled
PHASE_2_DATABASE_ENABLED=true

# Phase III: AI enabled
PHASE_3_AI_ENABLED=true

# -------------------------------------------------------------------------
# Security Settings
# -------------------------------------------------------------------------
# JWT token expiration time (in seconds)
JWT_EXPIRATION=86400

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -------------------------------------------------------------------------
# Performance Settings
# -------------------------------------------------------------------------
# Database connection pool size
DB_POOL_SIZE=10

# Database connection timeout (seconds)
DB_TIMEOUT=30

# Maximum file upload size (bytes)
MAX_UPLOAD_SIZE=10485760

# -------------------------------------------------------------------------
# Monitoring & Analytics
# -------------------------------------------------------------------------
# Sentry DSN (optional, for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics API key (optional)
ANALYTICS_API_KEY=your_analytics_key_here

# -------------------------------------------------------------------------
# External Services
# -------------------------------------------------------------------------
# Redis URL (for caching, optional)
REDIS_URL=redis://localhost:6379

# SMTP configuration (for notifications, optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=Todo Evolution <noreply@todoapp.com>

# -------------------------------------------------------------------------
# Development Overrides
# -------------------------------------------------------------------------
# Skip database migrations (development only)
SKIP_MIGRATIONS=false

# Enable hot reloading
HOT_RELOAD=true

# Mock external services (development only)
MOCK_EXTERNAL_SERVICES=false