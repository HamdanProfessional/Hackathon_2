# Notification Service Environment Variables

# Database - shared with main backend
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/todo_db

# Dapr Configuration
DAPR_HTTP_HOST=localhost
DAPR_HTTP_PORT=3500
DAPR_PUBSUB_NAME=todo-pubsub
DAPR_ENABLED=true

# Email/SMTP Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@todoapp.com
EMAIL_ENABLED=false

# Worker Settings
DUE_CHECK_INTERVAL_SECONDS=3600
RECURRING_CHECK_INTERVAL_SECONDS=3600
DUE_THRESHOLD_HOURS=24

# Application
APP_NAME=Notification Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=local

# CORS (optional - for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
